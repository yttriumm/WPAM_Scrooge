<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.OverviewFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/dashboardTextViewHelloGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboardTextViewHelloGreeting"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dashboardTextViewHelloName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/palette_first"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/dashboardTextViewHelloGreeting"
        app:layout_constraintStart_toEndOf="@+id/dashboardTextViewHelloGreeting"
        app:layout_constraintTop_toTopOf="@+id/dashboardTextViewHelloGreeting"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/overviewReceiptsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overviewTextViewYourReceipts"></LinearLayout>

    <TextView
        android:id="@+id/overviewTextViewYourReceipts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/overviewYourReceiptsLabel"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/dashboardTextViewHelloGreeting"
        app:layout_constraintTop_toBottomOf="@+id/dashboardTextViewHelloGreeting" />

    <TextView
        android:id="@+id/overviewNoReceiptTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@+id/overviewTextViewYourReceipts"
        app:layout_constraintTop_toBottomOf="@+id/overviewTextViewYourReceipts" />

</androidx.constraintlayout.widget.ConstraintLayout>