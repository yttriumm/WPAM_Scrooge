<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receiptDetailsEntryRowConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="10dp"
    android:paddingTop="0dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/receiptDetailsEntryName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Pozycja"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receiptDetailsEntryValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="185.49 zÅ‚"
        android:textColor="@color/palette_first"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/receiptDetailsEntryName"
        app:layout_constraintStart_toEndOf="@+id/receiptDetailsEntryName"
        app:layout_constraintTop_toTopOf="@+id/receiptDetailsEntryName" />

    <TextView
        android:id="@+id/receiptDetailsEntryPeople"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@drawable/rounded_corners"
        android:clickable="false"
        android:drawableLeft="@drawable/ic_baseline_group_12"
        android:gravity="center"
        android:padding="8dp"
        android:text="Maciek, Anka, Monika"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />
</androidx.constraintlayout.widget.ConstraintLayout>